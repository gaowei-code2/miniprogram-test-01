/**index.wxss**/
.faq-list{
	padding: 0 1.2rem;
}
.faq-list>.item{
	display: flex;
	padding: 1.6rem 0 1.4rem; border-bottom: #eee 1px solid;
}
.faq-list>.item:last-child{
	border-bottom: none;
}
.faq-list>.item::before{
	content: "Q"; display: flex; justify-content: center; align-items: center; flex-shrink: 0;
	width: 1.25rem; height: 1.25rem; line-height: 1rem; margin-right: 0.4rem; margin-top: -0.16rem; border-radius: 1.6rem;
	color: #fff; font-size: 1.28rem;
	background-color: #ffad36;
}
.faq-list>.item>.main>.question{
	line-height: 1.68rem; margin-top: -0.2rem;
	font-size: 1rem;
}
.faq-list>.item>.main>.reply>p{
	line-height: 1.52rem; margin-top: 0.8rem;
	color: #666; font-size: 1.12rem;
}
.faq-list>.item>.main>.reply>h5{
	line-height: 1.52rem; margin-top: 1.2rem;
	color: #666; font-size: 1.12rem; font-weight: bold;
}
.other{
	padding: 1.6rem 1.2rem; border-top: #f5f5f5 0.8rem solid;
}
.other>.title{
	line-height: 1.28rem;
	font-size: 1.28rem; font-weight: bold;
}
.other>.main{
	margin-top: 0.4rem;
}
.other>.main>.item{
	display: flex;
	line-height: 1.52rem; padding: 1rem 0; border-bottom: #eee 1px solid;
	color: #666; font-size: 1.12rem;
}
.other>.main>.item::before{
	content: "";
	width: 0.32rem; height: 0.32rem; margin-right: 0.48rem; margin-top: 0.6rem; border-radius: 50%;
	background-color: #ff9e2b;
}
.other>.main>.item a{
	color: #333; text-decoration: underline;
}